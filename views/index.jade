extends layout

block content
  .container
    header
      nav#queue soundmap
      nav#popular popular
      nav#host host
      nav#connect connect
    main
      .playerBox
        .userName
        h1.logoBox soundmap
        .player
          .artist
          .trackName
          .scrubber
            .heatmap
              .cells
              .map
                aside.one
                aside.two
                aside.three
              .markers
            .line
              canvas#linewave(width=580, height=90)
            .waveform
            .boxOmatic
              .likechart
                script(type='text/javascript', src='javascripts/graph.js')
          .controls
            button#audio.play
            button#heart
            span.playtime 0:00
      .news
        .popularBox
        .recentBox
      .userBox
        #userFavorites
  .widgetBox
    iframe#sc-widget(src="http://w.soundcloud.com/player/?url=http://api.soundcloud.com/", width="100%", height="165", scrolling="no", frameborder="no")
