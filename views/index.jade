extends layout

block content
  .container
    header
      nav#queue soundmap
      nav#popular popular
      //nav#host host
      nav#queue queue
      nav#connect connect
    main
      .playerBox
        .userName
        h1.logoBox soundmap
        .player
          .artist
          .trackName
          .scrubber
            .heatmap
              .cells
              .markers
            .line
              canvas#linewave(width=580, height=90)
            .waveform
            .boxOmatic
              #likechart.hideLikeGraph
                script(type='text/javascript', src='javascripts/graph.js')
          .controls
            button#audio.play
            button#heart
            button#toggleGraph graph
            span.upNext
            span.playtime 0:00
            div.queueListContainer
              ul.queueList
      .news.hide
        .popularBox
        .recentBox
      .userBox
        #userFavorites
  .widgetBox
    iframe#sc-widget(src="http://w.soundcloud.com/player/?url=http://api.soundcloud.com/", width="100%", height="165", scrolling="no", frameborder="no")
