extends layout

block content
  .container
    header
      nav soundmap
      nav popular
      nav host
      nav#connect connect
    main
      .playerBox
        .userName
        h1.logoBox soundmap
        .player
          .artist
          .trackName
          .scrubber
            .heatmap
              .map
                aside.one
                aside.two
                aside.three
              .markers
            .line
              canvas#linewave(width=580, height=90)
            .waveform
          .controls
            button#audio.play
            button#heart
      .userBox
        #userFavorites
  .widgetBox
    iframe#sc-widget(src="http://w.soundcloud.com/player/?url=http://api.soundcloud.com/", width="100%", height="165", scrolling="no", frameborder="no")
